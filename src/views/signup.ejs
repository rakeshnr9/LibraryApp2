               <input name="gender" style="font-family: 'Oswald', sans-serif;" type="radio" value="other" /> Other

<br><br>
               <label for="dob" style="font-family: 'Oswald', sans-serif;"><b>DOB</b></label>
              dob: <input type="date" style="font-family: 'Oswald', sans-serif;" name="birtdate" placeholder="select Birth date" required><br><br>

               <label for="phone" style="font-family: 'Oswald', sans-serif;"><b>Phone</b></label>
              phone: <input type="text" style="font-family: 'Oswald', sans-serif;" placeholder="Phone" id="phone" required maxlength="10">

               <label for="email" style="font-family: 'Oswald', sans-serif;"><b>Email</b></label>
              email: <input type="text" style="font-family: 'Oswald', sans-serif;" placeholder="Enter Email" id="email" required>
               <label for="password" style="font-family: 'Oswald', sans-serif; "><b>Enter Password</b></label>
              Password: <input type = "password" style="font-family: 'Oswald', sans-serif;" id="pass" placeholder="Password" required maxlength="15" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters">
               <p5 style="color:rgb(61, 59, 59); font-family: 'Oswald', sans-serif;"> Minimum 8 characters, at least one uppercase and one lower case, must contain at least one number</p5>
               <br>
                   <p5 class="head" style="font-family: 'Oswald', sans-serif;">Password Strength</p5>
                   <p5 class="strength" style="font-family: 'Oswald', sans-serif;" id="length"></p5><br>
                   <label for="password" style="font-family: 'Oswald', sans-serif;"><b>Re-Enter Password</b></label>
               <input type = "password" style="font-family: 'Oswald', sans-serif;" id="pass2" placeholder="Re-Enter Password" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters">

